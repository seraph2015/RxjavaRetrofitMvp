<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_dialog_count_sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:background="@mipmap/common_view_goods_sub"
        android:gravity="center_vertical"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/tv_dialog_goods_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@mipmap/common_view_goodscount_bg"
        android:gravity="center"
        android:text="1"
        android:textColor="#333333" />

    <LinearLayout
        android:id="@+id/ll_dialog_count_plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:background="@mipmap/common_view_goods_plus"
        android:gravity="center_vertical"
        android:orientation="vertical" />

</LinearLayout>