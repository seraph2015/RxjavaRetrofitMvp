<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/app_toolbar_style"
            app:navigationIcon="@drawable/test_ic_gesture_24dp">

            <TextView
                android:id="@+id/tv_toolbar_title"
                style="@style/app_toolbar_child_style"
                android:gravity="center"
                android:text="首页" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bnv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemBackground="@drawable/test_main_bottom_bg"
        app:itemIconTint="@color/main_bottom_icon_color"
        app:itemTextColor="@color/main_bottom_text_color"
        app:menu="@menu/test_menu_main" />
</LinearLayout>
